{% extends 'base.html.twig' %}

{% block title %}
    <title>Alpha Fitness | Comments</title>
{% endblock %}

{% block innerblock %}
<div class="inner-block">
    <h1>Comments Management</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idc</th>
                <th>Idp</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Report</th>
                <th>Iduser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.idc }}</td>
                <td>{{ comment.idp }}</td>
                <td>{{ comment.contenuc }}</td>
                <td>{{ comment.datec ? comment.datec|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.reportc }}</td>
                <td>{{ comment.iduser }}</td>
                <td>
                    <a href="{{ path('comments_show', {'idc': comment.idc}) }}">show</a>
                    {{ include('comments/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
