{% extends 'base.html.twig' %}

{% block title %}<title>Alpha Fitness | Détails Produit</title>{% endblock %}

{% block innerblock %}
    <div class="inner-block">

        <a href="{{ path('produit_index') }}"><i class="fa fa-arrow-circle-o-left">Retour</i></a>
        <h1>Produit : {{ produit.nom }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ produit.categorie }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Image du produit</th>
                <td>{{ produit.imgproduit }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fa fa-edit">Modifier</i></a>

        {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
