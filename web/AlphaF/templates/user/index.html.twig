{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Iduser</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Imageuser</th>
                <th>Role</th>
                <th>Datedenaissance</th>
                <th>Passwordoublie</th>
                <th>Online</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.iduser }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.imageuser }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.passwordoublie }}</td>
                <td>{{ user.online }}</td>
                <td>
                    <a href="{{ path('user_show', {'iduser': user.iduser}) }}">show</a>
                    <a href="{{ path('user_edit', {'iduser': user.iduser}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
